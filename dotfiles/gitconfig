[alias]
    lg = log --pretty=format:'%Cred%h %Cgreen%ad %Cblue%an %Creset%s' --date=short --abbrev-commit -n10
    lgf = log --pretty=format:'%Cred%h %Cgreen%ad %Cblue%an %Creset%s' --date=short --abbrev-commit
    lgn = log --pretty=format:'%Cred%h %Cgreen%ad %Cblue%an %Creset%s' --date=short --abbrev-commit --name-status
    cnf = diff --name-only --diff-filter=U
    ls = ls-remote origin
    lsr = ls-remote
    a = add .
    s = status -s
    d = diff
    dc = diff --cached
    c = commit -m
[core]
	whitespace = cr-at-eol
	symlinks = true
	excludesfile = ~/.gitignore_global
	filemode = false
	fileMode = false
[color]
    ui = auto
[merge]
	tool = p4merge
