# Bash prompt (time cwd repo\n>).
. ~/.git-prompt.sh
export PS1='\n\[$(tput setaf 2)\]\t \[$(tput setaf 5)\]\w \[$(tput setaf 3)\]$(__git_ps1 "%s") \[$(tput setaf 2)\] \nâ†’ \[$(tput sgr0)\]'

if [[ $TERM == xterm ]]; then TERM=xterm-256color; fi

# Add ~/.bin to PATH - I drop custom shell scripts in there.
export PATH=$PATH:~/.bin

# Set history file size.
HISTSIZE=10000
HISTFILESIZE=100000

# Handy aliases.
alias ll='ls -alFh'
alias vig='vi $(git s | awk '"'"'{print $2}'"'"')'

hl() {
    ack --passthru --color --color-match="${2:-yellow}" $1;
}

manp() {
    man -t $1 | open -fa Preview
}

export LC_ALL=en_US.utf-8
export LANG="$LC_ALL"
